#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

dir="$( cd "$(dirname "$( dirname "${BASH_SOURCE[0]}" )" )" >/dev/null 2>&1 && pwd )"

stop_containers() {
  echo "Shutting off containers..."
  echo
  cd "$dir/wp"
  docker-compose stop
  echo
  echo "All done!"
}

trap stop_containers SIGINT

echo "Starting containers..."
echo
cd "$dir/wp"
docker-compose up -d
echo

echo "Starting asset watcher ..."
echo
cd "$dir/wp/wp-content/themes/mediasanctuary"
npm install
npm start
